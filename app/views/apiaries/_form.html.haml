= form_for @apiary, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :adress, :class => 'control-label'
    .controls
      = f.text_field :adress, :class => 'text_field'
  .control-group
    = f.label :coordinates, :class => 'control-label'
    .controls
      = f.text_field :coordinates, :class => 'text_field'
  .control-group
    = f.label :capacity, :class => 'control-label'
    .controls
      = f.number_field :capacity, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), apiaries_path, :class => 'btn'
