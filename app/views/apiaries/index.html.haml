- model_class = Apiary
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:adress)
      %th= model_class.human_attribute_name(:coordinates)
      %th= model_class.human_attribute_name(:capacity)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @apiaries.each do |apiary|
      %tr
        %td= link_to apiary.name, apiary_path(apiary)
        %td= apiary.adress
        %td= apiary.coordinates
        %td= apiary.capacity
        %td=l apiary.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_apiary_path(apiary), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), apiary_path(apiary), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_apiary_path, :class => 'btn btn-primary'
