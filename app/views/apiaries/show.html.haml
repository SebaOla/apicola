- model_class = Apiary
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @apiary.name
%p
  %strong= model_class.human_attribute_name(:adress) + ':'
  = @apiary.adress
%p
  %strong= model_class.human_attribute_name(:coordinates) + ':'
  = @apiary.coordinates
%p
  %strong= model_class.human_attribute_name(:capacity) + ':'
  = @apiary.capacity

%p
  %strong= model_class.human_attribute_name(:beehives) + ':'
  %br
  = render partial: "beehives/index", locals: {beehives: @apiary.beehives}


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), apiaries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_apiary_path(@apiary), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), apiary_path(@apiary), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
