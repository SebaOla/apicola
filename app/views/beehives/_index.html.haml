- model_class = Beehive
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:codigo)
      %th= model_class.human_attribute_name(:apiary_id)
      %th= model_class.human_attribute_name(:beehive_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - beehives.each do |beehive|
      %tr
        %td= link_to beehive.codigo, beehive_path(beehive)
        %td= link_to beehive.apiary.name, apiary_path(beehive.apiary) unless beehive.apiary.nil?
        %td= !beehive.beehive.nil? ? beehive.beehive.codigo : " - "
        %td=l beehive.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_beehive_path(beehive), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), beehive_path(beehive), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_beehive_path + "?apiary_id=" + @apiary.id.to_s, :class => 'btn btn-primary'
