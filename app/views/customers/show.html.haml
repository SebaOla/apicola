- model_class = Customer
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @customer.name
%p
  %strong= model_class.human_attribute_name(:adress) + ':'
  %br
  = @customer.adress
%p
  %strong= model_class.human_attribute_name(:business_phone) + ':'
  %br
  = @customer.business_phone
%p
  %strong= model_class.human_attribute_name(:personal_phone) + ':'
  %br
  = @customer.personal_phone
%p
  %strong= model_class.human_attribute_name(:coordinates) + ':'
  %br
  = @customer.coordinates

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), customers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(@customer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(@customer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
