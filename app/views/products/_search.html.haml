%div.modal.hide.fade{ id: 'new_product', role: 'dialog', 'aria-labelledby' => 'myModalLabel', 'aria-hidden' => 'true'}
  %div.modal-header
  %div.modal-body

    - p_class = Product
    %table.table.table-striped
      %thead
        %tr
          %th= p_class.human_attribute_name(:id)
          %th= p_class.human_attribute_name(:name)
          %th= p_class.human_attribute_name(:description)
          %th= p_class.human_attribute_name(:weigth)
          %th= p_class.human_attribute_name(:volume)
          %th= p_class.human_attribute_name(:unit_price)
          %th= p_class.human_attribute_name(:stock)
      %tbody
        - products.each do |p|
          %tr
            %td
              %a{href: '#', onclick: "javascript: add_product($(this));"}= p.id
            %td= p.name
            %td= p.description
            %td= p.weigth
            %td= p.volume
            %td= p.unit_price
            %td= p.stock

  %div.modal-footer
    %button.btn{'data-dismiss' => 'modal', 'aria-hidden' => 'true', onclick: "javascript: close_products_search();"}= 'Cerrar'