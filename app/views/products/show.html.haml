- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @product.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @product.description
%p
  %strong= model_class.human_attribute_name(:weigth) + ':'
  %br
  = @product.weigth
%p
  %strong= model_class.human_attribute_name(:volume) + ':'
  %br
  = @product.volume
%p
  %strong= model_class.human_attribute_name(:unit_price) + ':'
  %br
  = @product.unit_price
%p
  %strong= model_class.human_attribute_name(:stock) + ':'
  %br
  = @product.stock

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
